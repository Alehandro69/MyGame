<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/smallIv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/smallpc"
        android:layout_above="@id/helloTv"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/helloTv"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text='Привет! Я компьютер «Small».
        И я хочу с тобой поиграть!!!'
        android:textColor="#3DA5F8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gameBt"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Играть!"
        android:textAllCaps="false"
        android:layout_below="@id/helloTv"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>