<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumberRandomFragment">

    <!-- TODO: Update blank fragment layout -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Рандом"
            android:textSize="22sp" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/numberText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Укажи минимальное и максимальное значение."
        android:textSize="26sp" />

    <RelativeLayout
        android:id="@+id/numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputLayout"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:hint="От"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/minNum"
                android:gravity="center"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputLayout2"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textInputLayout"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:hint="До"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/maxNum"
                android:gravity="center"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--        <EditText
                    android:id="@+id/minNum"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:hint="От"
                    android:inputType="number"
                    android:textColorHint="@color/blue" />

                <EditText
                    android:id="@+id/maxNum"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:layout_toEndOf="@+id/minNum"
                    android:gravity="center"
                    android:hint="До"
                    android:inputType="number"
                    android:textColorHint="@color/blue" />-->

    </RelativeLayout>

    <Button
        android:id="@+id/randomBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:hint="Рандом"
        android:textColorHint="@color/white" />
</RelativeLayout>


</FrameLayout>